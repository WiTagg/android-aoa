<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Base.AppTheme">
    </style>
    <style name="LoadTheme" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/alpha</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tab_top_item</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="ShopTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/main_yellow</item>
        <item name="android:textColorPrimary">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/content_bg</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="a_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorccc</item>
    </style>

    <style name="a_line_v">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorccc</item>
    </style>

    <style name="three_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3px</item>
        <item name="android:background">@color/alpha</item>
    </style>

    <style name="big_line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_middle</item>
        <item name="android:background">@color/content_bg</item>
    </style>

    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/alpha</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="entry_point_image">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center|center_vertical</item>
        <item name="android:padding">@dimen/margin_side</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="shop_info_key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/main_green</item>
    </style>

    <style name="shop_info_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="AppCompatDialogTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/alpha</item>
    </style>

    
    <style name="action_text_white_16sp">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="text_white_18sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="editbox_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/banner_height</item>
        <item name="android:padding">@dimen/border_common</item>
        <item name="android:layout_marginLeft">@dimen/margin_side</item>
        <item name="android:layout_marginRight">@dimen/margin_side</item>
        <item name="android:textColorHint">@color/colorccc</item>
        <item name="android:background">@color/colorfd</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>



    <style name="common_item_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>
    <style name="common_item_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">3dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>


</resources>
